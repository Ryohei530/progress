<%= form_with(model: @report, local: true, class: "card-form") do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="aim">
    <p class="aim-tit">今月の目的</p>
    <p class="aim-txt">未設定</p>
    <p class="aim-tit">今月の目標指標</p>
    <p class="aim-txt">未設定</p>
  </div>
  
  <div class="action">
    <p class="action-tit">今日達成したアクション</p>
    <ul class="action-list">
      <li class="action-item">
        <div class="action-inner">
          <p class="action-txt">未設定</p>
        </div>
      </li>
    </ul>
  </div>
    
  <div class="realize">
    <%= f.label :content, "感想、気付き", class: "realize-tit" %>
    <%= f.text_area :content, placeholder: "月間目標が未設定です。目標を設定して日報を投稿しよう！", readonly: true %>
  </div>
  <div class="d-flex justify-content-between">
    <span class="card-image">
      <%= f.label :image do %>
        <i class="far fa-image"></i>
      <% end %>
      <%= f.file_field :image, accept: "image/jpeg,image/gif,image/png", disabled: 'true' %> 
    </span>
    <%= f.submit yield(:button_text), class: "card-btn btn btn-primary", disabled: 'true' %>
  </div>
<% end %>

<script type="text/javascript">
  $("#report_image").bind("change", function() {
    var size_in_megabytes = this.files[0].size/1024/1024;
    if (size_in_megabytes > 5) {
      alert("Maximum file size is 5MB. Please choose a smaller file.");
      $("#report_image").val("");
    }
  });
</script>