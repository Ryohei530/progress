<%= provide(:title, "ログイン") %>
<h1 class="login">ログイン</h1>

<div class="row">
  <div class="col-md-6 offset-md-3">
    <%= form_with(url: login_path, scope: :session, local: true) do |f| %>
      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>
      
      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>
      
      <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span>ログインしたままにする</span>
      <% end %>
      
      <%= f.submit "ログイン", class: "btn btn-primary" %>
    <% end %>
    
    <p>アカウントをお持ちでないですか？<%= link_to "アカウント作成", signup_path %></p>
    
    
    <%= form_with(url: login_path, scope: :session, local: true) do |f| %>
      <%= f.hidden_field :email, value: 'brian@example.com' %>
      <%= f.hidden_field :password, value: '012345' %>
      
      <%= f.submit "ゲストログイン", class: "btn btn-danger nltop-btn _btn-red" %>
    <% end %>
  </div>
</div>
