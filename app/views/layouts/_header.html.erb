<header class="navbar navbar-fixed-top navbar-expand-lg navbar-dark bg-danger">
  <div class="container">
    <%= link_to "Progress", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right align-items-center">
        <li class="nav-item"><%= link_to "みんなの目標", goals_path, class: "nav-link" %></li>
        <li class="nav-item"><%= link_to "お悩み相談（掲示板）", boards_path, class: "nav-link" %></li>
        <li class="nav-item"><%= link_to "英語学習法特集", articles_path, class: "nav-link" %></li>
        <li class="nav-item"><%= link_to "ランキング", rank_path, class: "nav-link" %></li>
        <% if logged_in? %>
          <li class="dropdown nav-item">
            <a href="#" class="dropdown-toggle nav-link" data-toggle="dropdown">
              <%= image_tag current_user.avatar.variant(gravity: :center, resize: "30x30^", crop: "30x30+0+0").processed, class: '_rounded' %> 
              <%= current_user.name %>
              <b class="carret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "マイページ", current_user, class: "dropdown-item" %></li>
              <li><%= link_to "設定", edit_user_path(current_user), class: "dropdown-item" %></li>
              <li><%= link_to "ブックマーク一覧", bookmarks_path, class: "dropdown-item" %></li>
              <li class="dropdown-divider"></li>
              <li>
                <%= link_to "ログアウト", logout_path, method: :delete, class: "dropdown-item logout" %>
              </li>
            </ul>
          </li>
        <% else %>
          <li class="nav-item"><%= link_to "ログイン", login_path, class: "nav-link" %></li> 
        <% end %>
        
      </ul>
    </nav>
  </div>
</header>