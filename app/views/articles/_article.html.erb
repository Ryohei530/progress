<li class="article-<%= article.id %> card-li col-12 col-md-6">
  <div class="card">
    <%= link_to article_path(article), class: "card-img" do %>
      <%= image_tag 'english.jpeg' %>
      <!--article.image-->
    <% end %>
    <div class="card-body d-flex flex-column">
      <%= link_to article, class: "card-title h5" do %>
        <%= article.title %>
      <% end %>
      <p class="card-text">
        <%= truncate(article.content, length: 65, omission: "...") %>
      </p>
      
      <div class="d-flex mt-auto">
        <div class="card-box col-6">
          <%= link_to article_path(article), class: "card-btn" do %>
            もっと見る<i class="fas fa-angle-double-right"></i>
          <% end %>
        </div>
        <div class="card-inner col-6">
          <div class="card-avatar">
            <%= link_to article.user do %>
              <%= image_tag article.user.avatar.variant(gravity: :center, resize: "30x30^", crop: "30x30+0+0").processed, class: '_rounded' %>
            <% end %> 
          </div>
          <div class="card-user">
            <%= link_to article.user do %>
              <%= article.user.name %>
            <% end %> 
          </div>
        </div>
      </div>
    </div>
  </div>
</li>