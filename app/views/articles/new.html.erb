<% provide(:title, "記事作成") %>
<% provide(:button_text, "投稿") %>

<h1 class="text-center">記事作成</h1>

<div class="row">
  <% @tags.each do |tag| %>
    <span>
      <%= link_to tag.name, tag_articles_path(tag) %>
      <%= "(#{tag.articles.count})" %>
    </span>
  <% end %>
</div>
<div class="row">
  <div class="col-md-6 offset-md-3">
    <%= render 'article_form' %>
  </div>
</div>