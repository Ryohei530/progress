<% provide(:title, "記事作成") %>
<% provide(:button_text, "投稿") %>

<div class="row">
  <div class="col-md-3">
    <div class="tag">
      <div class="tag-header">
        <i class="fas fa-tags"></i> タグ
      </div>
      <ul class="tag-list d-flex flex-wrap">
        <% @tags.each do |tag| %>
          <li class="tag-item">
            <%= link_to tag_articles_path(tag), class: "tag-link badge badge-pill badge-info" do %>
              <%= tag.name %> <span class="badge badge-light"><%= tag.articles.count %></span>
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
  <div class="col-md-9">
    <div class="card">
      <div class="card-header">
        <h2 class="text-center">記事作成</h2>
      </div>
      <div class="card-body">
        <%= render 'article_form' %>
      </div>
    </div>
  </div>
</div>