<% provide(:title, "#{@tag.name} タグを含む記事一覧") %>
<h1 class="text-center">記事一覧</h1>

<% @tags.each do |tag| %>
  <span>
    <%= link_to tag.name, tag_articles_path(tag) %>
    <%= "(#{tag.articles.count})" %>
  </span>
<% end %>
<p><%= "#{@tag.name}" %> タグを含む記事一覧</p>
<% @articles.each do |article| %>
  <%= link_to article.title, article %>
<% end %>