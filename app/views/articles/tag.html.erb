<% provide(:title, "#{@tag.name} タグを含む記事一覧") %>

<div class="articles">
  <div class="row mb-4 justify-content-between">
    <div class="col-8">
      <div class="search">
        <%= form_with(url: search_articles_path, method: :get, local: true) do |f| %>
          <div class="search-inner d-flex">
            <%= f.text_field :search, class: 'form-control' %>
            <%= button_tag type: "submit", class: "btn btn-primary" do %>
              <i class="fas fa-search"></i>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="col-2 text-right">
      <%= link_to new_article_path, class: 'btn btn-outline-success articles-create' do %>
        記事を作成 <i class="fas fa-pen"></i>
      <% end %>
    </div>
  </div>
  <h4><%= "#{@tag.name}" %> タグを含む記事一覧</h4>
  <div class="row mb-5">
    <div class="col-md-6">
      <div class="tag">
        <div class="tag-header">
          <i class="fas fa-tags"></i> タグ
        </div>
        <ul class="tag-list d-flex flex-wrap">
          <% @tags.each do |tag| %>
            <li class="tag-item">
              <%= link_to tag_articles_path(tag), class: "tag-link badge badge-pill badge-info" do %>
                <%= tag.name %> <span class="badge badge-light"><%= tag.articles.count %></span>
              <% end %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
    <div class="col-md-6">
      <div class="favorite">
        <div class="favorite-header">
          <i class="fas fa-crown"></i> 人気記事
        </div>
        <ul class="favorite-list">
          <li class="favorite-item articles">
            <div class="card">
              <%= link_to article_path(@articles.first), class: "card-img" do %>
                <%= image_tag 'english.jpeg' %>
                <!--article.image-->
              <% end %>
              <div class="card-body">
                <%= link_to @articles.first, class: "card-title h5" do %>
                  <%= @articles.first.title %>
                <% end %>
                <p class="card-text">
                  <%= truncate(@articles.first.content, length: 30, omission: "...") %>
                </p>
                <div class="d-flex ">
                  <div class="card-box col-6">
                    <%= link_to article_path(@articles.first), class: "card-btn" do %>
                      もっと見る
                    <% end %>
                  </div>
                  <div class="card-inner col-6">
                    <div class="card-avatar">
                      <%= link_to @articles.first.user do %>
                        <%= image_tag @articles.first.user.avatar.variant(gravity: :center, resize: "30x30^", crop: "30x30+0+0").processed, class: '_rounded' %>
                      <% end %> 
                    </div>
                    <div class="card-user">
                      <%= @articles.first.user.name %>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </li>
        </ul>
      </div>
    </div>
  </div>
  
  <div class="row">
    <%= render @articles %>
  </div>
</div>


