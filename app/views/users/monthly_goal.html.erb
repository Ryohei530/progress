<% provide(:title, @user.name) %>
<div class="user">
  <div class="row">
    <div class="d-flex col-12 mb-3 justify-content-between">
      <div class="d-flex">
        <h2>1ヶ月の目標一覧</h2>
        <div class="utab ml-3">
          <%= link_to  new_monthly_goal_path, class: 'btn' do %>
            <i class="fas fa-plus"></i>
          <% end %>
        </div>
      </div>
      <%= render 'tnav' %>
    </div>
  </div>
</div>

<% if @user.monthly_goals.any? %>
  <ul class="goals row justify-content-center justify-content-xl-start">
    <%= render @monthly_goals %>
  </ul>
<% end %>