<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <ul class="tab nav nav-tabs">
      <li class="nav-item">
        <%= link_to "目標一覧", goal_user_path(@user), class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to "日報", report_user_path(@user), class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to "つぶやき", user_path(@user), class: "nav-link" %>
      </li>
    </ul>
    <ul class="tab nav nav-tabs">
      <li class="nav-item">
        <%= link_to "日報", report_user_path(@user), class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to "いいねした日報", liked_reports_user_path(@user), class: "nav-link" %>
      </li>
    </ul>
    <% if @user.reports.any? %>
    
    <ul class="report">
      <%= render @reports %>
    </ul>
    <%= paginate @reports %>
    <% end %>
    <%= link_to "日報を作成する", new_report_path, class: 'btn btn-primary ml-4' %>
  </div>
</div>