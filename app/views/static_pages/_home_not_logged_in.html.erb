<% provide(:controller, :static_pages) %>
<% provide(:action, :home) %>

<div class="sec row">
  <div class="content col-12 col-lg-8">
    <% if logged_in? %>
    <div class="content-inner mb-5">
      <div class="card">
        <div class="card-header">
            <%= render 'shared/user_info' %>
        </div>
        <div class="card-body">
            <%= render 'shared/post_form' %>
        </div>
      </div>
    </div>
    <% end %>
    <p class="content-tit">つぶやき</p>
    <%= render 'shared/feed' %>
  </div>
</div>
</div>