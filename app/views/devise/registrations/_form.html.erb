<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
    
  <div class="row justify-content-center mb-3">
    <%= image_tag 'default.png', size: '100x100', class: "_rounded" %>
  </div>
  <div class="d-block text-center">
    <%= f.label :avatar, "画像をアップロードする", class: 'btn btn-outline-primary' %>
  </div>
  <%= f.file_field :avatar, accept: "image/jpeg,image/gif,image/png", class: 'd-none' %>
  
  <%= f.label :name %>
  <%= f.text_field :name, autocomplete: "name", class: 'form-control' %>

  <%= f.label :email %>
  <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
  
  <%= f.label :bio  %>
  <%= f.text_area :bio, class: 'form-control' %>
  
  <%= f.label :password %>
  <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上)</em>
  <% end %><br />
  <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
  
  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
  
  <%= f.submit yield(:button_text), class: "btn btn-primary" %>
  
<% end %>

<%= render "devise/shared/links" %>
