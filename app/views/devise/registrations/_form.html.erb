<div class="card  border-0 mb-0 bg-form">
  <div class="card-header bg-transparent pb-4">
    <div class="text-muted text-center mt-2 mb-3"><small>SNSアカウントでログイン</small></div>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="btn-wrapper text-center">
          <%= link_to omniauth_authorize_path(resource, :twitter), method: :post, class: "btn btn-neutral btn-icon" do %>
            <span class="btn-inner--icon"><img src="<%= asset_path('twitter.svg') %>" class="py-3px"></span>
            <span class="btn-inner--text">Twitter</span>
          <% end %>
          <%= link_to omniauth_authorize_path(resource, :google_oauth2), method: :post, class: "btn btn-neutral btn-icon" do %>
            <span class="btn-inner--icon"><img src="<%= asset_path('google.svg') %>"></span>
            <span class="btn-inner--text">Google</span>
          <% end %>
        </div>
      <% end %>
  </div>
  <div class="card-body px-lg-5 py-lg-3 border-bottom">
    <div class="text-center text-muted mb-4">
      <small>メールアドレスでアカウントを登録</small>
    </div>
    
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      
      <div class="row justify-content-center mb-3">
        <%= image_tag 'user.png', size: '100x100', class: "_rounded" %>
      </div>
      <div class="d-block text-center">
        <%= f.label :avatar, "画像をアップロードする", class: 'btn btn-outline-primary' %>
      </div>
      <%= f.file_field :avatar, accept: "image/jpeg,image/gif,image/png", class: 'd-none' %>
      
      
      <div class="form-group">
        <%= f.label :name, class: "text-muted" %>
        <div class="input-group input-group-merge input-group-alternative">
          <div class="input-group-prepend">
            <span class="input-group-text"><i class="material-icons">person</i></span>
          </div>
          <%= f.text_field :name, autocomplete: "name", class: 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :email, class: "text-muted" %>
        <div class="input-group input-group-merge input-group-alternative">
          <div class="input-group-prepend">
            <span class="input-group-text"><i class="material-icons">email</i></span>
          </div>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :bio, class: "text-muted" %>
        <div class="input-group input-group-merge input-group-alternative h-120">
          <div class="input-group-prepend">
            <span class="input-group-text"><i class="material-icons">edit</i></span>
          </div>
          <%= f.text_area :bio, class: 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <% if @minimum_password_length %>
          <% mini_pass = @minimum_password_length %>
        <% end %>
        <%= f.label :password, "パスワード(#{mini_pass} 文字以上)", class: "text-muted"  %>
        <div class="input-group input-group-merge input-group-alternative">
          <div class="input-group-prepend">
            <span class="input-group-text"><i class="material-icons">lock</i></span>
          </div>
          <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :password_confirmation, class: "text-muted" %>
        <div class="input-group input-group-merge input-group-alternative">
          <div class="input-group-prepend">
            <span class="input-group-text"><i class="material-icons">spellcheck</i></span>
          </div>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
        </div>
      </div>
      
      
      <div class="text-center">
        <%= f.submit yield(:button_text), class: "btn btn-primary my-4" %>
      </div>
    <% end %>
  </div>